#!/bin/sh

#set -e

INTERVAL=0.5

# attention: %CPU is at column 9, so these two variables must be
# modified together
COLNAME=%CPU
COLNUM=9

while true; do
    # everybody knows how sed works, so this is a no-comment :-)
    top -n 1 -o $COLNAME -b | head -n8 | tail -n1 | \
	sed 's/\s\+/ /g' | sed 's/^\s*//g' | \
	cut -d' ' -f1,$COLNUM,12 --output-delimiter=:
    sleep $INTERVAL
done
